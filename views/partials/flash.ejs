<% if (success && success.length) { %>
<div
  class="toast fade show align-items-center text-white bg-success position-absolute top-0 mt-3 start-50 translate-middle border-0"
  role="alert"
  aria-live="assertive"
  aria-atomic="true"
>
  <div class="d-flex">
    <div class="toast-body"><%= success %></div>
    <button
      type="button"
      class="btn-close btn-close-white me-2 m-auto"
      data-bs-dismiss="toast"
      aria-label="Close"
    ></button>
  </div>
</div>
<% } %> <% if (error && error.length) { %>
<div
  class="toast fade show align-items-center text-white bg-danger position-absolute top-0 mt-3 start-50 translate-middle border-0"
  role="alert"
  aria-live="assertive"
  aria-atomic="true"
>
  <div class="d-flex">
    <div class="toast-body"><%= error %></div>
    <button
      type="button"
      class="btn-close btn-close-white me-2 m-auto"
      data-bs-dismiss="toast"
      aria-label="Close"
    ></button>
  </div>
</div>
<% } %>
