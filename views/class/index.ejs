<% layout('layouts/lms-boilerplate') -%>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="list-group">
        <a href="/class/new" class="btn btn-primary mb-5">Create Class</a>
        <% for (let _class of classes) {%>
        <form action="/class/<%= _class._id %>/join" method="POST">
          <div class="mb-3 d-flex justify-content-between align-items-center">
            <a href="/class/<%= _class._id %>"><%= _class.name %></a>
            <button class="btn btn-primary" id="join">Join</button>
          </div>
        </form>
        <% } %>
      </div>
    </div>
  </div>
</div>
